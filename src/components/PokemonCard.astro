---
import { Image } from '@astrojs/image/components'
interface Props {
  name: string
}
const { name } = Astro.props
const data = await fetch(`https://pokeapi.co/api/v2/pokemon/${name}`).then((res) => res.json())
---

<li>
  <span>{name}</span>
  <Image
    alt={`${name} image`}
    aspectRatio={1}
    format='webp'
    src={data.sprites.front_default}
    width='96'
  />
</li>
<style>
  li {
    list-style: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background: rgb(212, 226, 196);
    background: linear-gradient(140deg, rgb(212, 226, 196) 0%, rgb(217, 184, 216) 100%);
    border-radius: 0.4rem;
    box-shadow: rgba(187, 187, 187, 0.4) 1px 1px 4px;
  }
  span {
    color: purple;
  }
</style>
